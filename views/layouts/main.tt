<!DOCTYPE html>
<html lang="en">
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=yes">

  <title>FSU Conference Page</title>

  <link rel="stylesheet" type="text/css" href="/javascripts/bower_components/bootstrap/dist/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="/javascripts/bower_components/font-awesome/css/font-awesome.min.css">
  <link rel="stylesheet" type="text/css" href="/css/style.css">

 <script type="text/javascript" src="/javascripts/apps/require-config.js"></script>

[% IF appname %]
<script type="text/javascript" data-main="/javascripts/apps/[% appname %]" src="/javascripts/bower_components/requirejs/require.js"></script>

<script type="text/javascript">
requirejs.config({
    config: {
        '[% appname %]': {
            [% IF authors %]
              authors: [% authors %],
            [% END %]
            [% IF modules %]
              modules: [% modules %],
            [% END %]
            [% IF problems %]
              problems: [% problems %],
            [% END %]
            [% IF problem_sets %]
              problem_sets: [% problem_sets %],
            [% END %]
            [% IF id %]
               problem_id: "[% id %]",
            [% END %]
            [% IF set_id %]
               set_id: "[% set_id %]",
            [% END %]

        }
    }
});
</script>

[% END %]

</head>
<body>
  <nav class ="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="navbar-header">
      <button class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#"> FSU Conference Proposals</a>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li><p class="navbar-text" id="short-message"></p>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li> [%IF user && user.first_name %]
            <p class="navbar-text"> Welcome [% user.first_name %]</p>
            [% END %] </li>
          <li class="dropdown">
          [% IF user && user.role %]
            <a class="dropdown-toggle" href="#" data-toggle="dropdown">Change Role
              <b class="caret"> </a>
          [% END %]
            <ul class="dropdown-menu">
              [% IF user && user.role %]
                 [% FOREACH val in user.role %]
                     [% link = "/${top_dir}/${val}" %]
                     <li><a href=[% link %]>  [%val %]</a></li>
                 [% END %]
              [% END %]
                 <li><a href="/${top_dir}/add-role"> Add Role</a></li>
            </ul></li>
            <li>
          [% IF user %]
          <button class="btn btn-default navbar-btn" id="logout">Log Out</button>
          [% END %]
          </li>
          <li><p class="navbar-text"></p></li>
        </ul>
      </div>
    </div>
  </nav>
  <div id="content">
   [% content %]
   </div>
</body>
</html>
