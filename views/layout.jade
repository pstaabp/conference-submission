doctype html
html
  head
    title Undergraduate Conference Submission
    link(href="/conference-submission/javascripts/bower_components/font-awesome/css/font-awesome.min.css",rel="stylesheet")
    link(href='/conference-submission/javascripts/bower_components/bootstrap/dist/css/bootstrap.css',rel='stylesheet',media="screen")
    link(href='/conference-submission/stylesheets/style.css',rel='stylesheet')
    block script
  body
    nav.navbar.navbar-default.navbar-fixed-top(role="navigation")
      .navbar-header
        button.navbar-toggle(data-toggle="collapse",type="button",data-target="#bs-example-navbar-collapse-1")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="#") FSU Conference Proposals
      .collapse.navbar-collapse#bs-example-navbar-collapse-1
        ul.nav.navbar-nav
          li
            button.btn.btn-default.navbar-btn#msg-toggle
              i.fa.fa-comment-o.fa-lg
          li
            p.navbar-text#short-message
        ul.nav.navbar-nav.navbar-right
          li
            p.navbar-text Welcome #{user.first_name}
          li.dropdown
            if user && user.role && user.role.length>1
              a.dropdown-toggle(href="#",data-toggle="dropdown") Change role
                b.caret
              ul.dropdown-menu
                each val in user.role
                  - var link = "/conference-submission/" + val
                  li
                    a(href=link)= val
          li
            button.btn.btn-default.navbar-btn#logout Log Out
            button.btn.btn-default.navbar-btn#help-link Help
          li
            p.navbar-text 
    #container
      block container
    
    block templates

    
