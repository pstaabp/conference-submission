extends ../layout

block script
  script(type="text/javascript",src="/#{top_dir}/javascripts/apps/require-config.js")
  script(type='text/javascript',data-main='/#{top_dir}/javascripts/apps/Basic.js',src='/#{top_dir}/javascripts/bower_components/requirejs/require.js').


block container
  h2 Sign up for Judging the Conference Presentations and Posters

  form(action='/#{top_dir}/judges',method='post')
    - var _name = user.first_name + " " + user.last_name; 
    input(type='hidden',name='name',value="#{_name}")
    input(type='hidden',name='email',value="#{user.email}")
    table.col-md-12.table
      tbody
        tr
          td.col-md-3 I'm willing to judge: 
          td.col-md-9
            label.radio.inline
              input(type="radio",name="type",value="poster") 
              | Poster Presentation
            label.radio.inline
              input(type="radio",name="type",value="oral") 
              | Oral Presentation
            label.radio.inline
              input(type="radio",name="type",value="either") 
              | Either
